<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingStart="10dp"
    android:paddingTop="4dp"
    android:paddingEnd="70dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/chat_usernickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Nickname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chat_usernickname"
        android:background="@drawable/message_bubble_sender"
        android:padding="10dp"
        android:text="A little bigger placeholder message that goes all the way."
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/chat_usernickname"
        app:layout_constraintTop_toBottomOf="@+id/chat_usernickname" />

</androidx.constraintlayout.widget.ConstraintLayout>